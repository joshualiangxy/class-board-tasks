.button {
  background: $blue;
  border: none;
  padding: $s-size;
  color: white;
  font-size: $font-size-large;
  font-weight: 300;
  display: inline-block;
  text-decoration: none;
  line-height: 1;
  position: relative;
}

.button--link {
  background: none;
  color: white;

  &::after {
    display: block;
    content: '';
    border-bottom: solid 2px white;
    transform: scaleX(0);
    transition: transform 250ms ease-in-out;
    transform-origin: 100% 50%;
  }

  &:hover::after {
    transform: scaleX(1);
    transform-origin: 0 50%;
  }
}

